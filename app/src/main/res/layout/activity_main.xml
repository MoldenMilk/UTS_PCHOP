<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="start"
    android:background="@color/Primary"
    tools:context=".MainActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="170px">
        <ImageView
            android:id="@+id/iv_menu"
            android:layout_width="150px"
            android:layout_height="150px"
            android:gravity="start"
            android:src="@drawable/ecommerce"
            android:layout_centerHorizontal="true"
            android:elevation="18dp"
            android:onClick="@{activity.btnHome}"
            />
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_margin="20dp"
                android:text="SPORT"
                android:background="@color/grey"
                android:src="@drawable/clothes"
                android:onClick="@{activity.btnClothes}"
                />
            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_margin="20dp"
                android:text="SPORT"
                android:background="@color/grey"
                android:src="@drawable/kitchen"
                android:onClick="@{activity.btnKitchen}"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="13dp">
            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_margin="20dp"
                android:text="SPORT"
                android:background="@color/grey"
                android:src="@drawable/sport"
                android:onClick="@{activity.btnSport}"
                />

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_margin="20dp"
                android:text="SPORT"
                android:background="@color/grey"
                android:src="@drawable/joystick"
                android:onClick="@{activity.btnGames}"
                />
        </LinearLayout>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCheckOut"
            android:layout_width="150dp"
            android:layout_height="55dp"
            android:layout_gravity="center"
            app:cornerRadius="10dp"
            android:text="CHECK OUT"
            android:backgroundTint="@color/Secondary"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnLocation"
            android:layout_width="150dp"
            android:layout_height="55dp"
            android:layout_gravity="center"
            app:cornerRadius="10dp"
            android:text="CHECK LOCATION"
            android:backgroundTint="@color/Secondary"/>
    </LinearLayout>

</LinearLayout>